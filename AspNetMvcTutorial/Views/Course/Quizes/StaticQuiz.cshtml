@model AspNetMvcTutorial.Models.Test
@{
    var prevQuiz = ViewBag.prevQuiz != "" ? String.Format(@"<a href=""/Course/RenderQuizPage/{0}/{1}/{2}"" class=""itemLink"">&lt;&lt;poprzednie pytanie </a>", Model.TestGroupNo, ViewBag.MaterialNumber, ViewBag.prevQuiz) : "";
