    var CurrentQuiz = Model.QuizeList[ViewBag.currentQuizID];
}
    <br />
    <br />
    <span class="subjectNavigation">@Html.Raw(@prevQuiz)&nbsp;&nbsp;@Html.Raw(nextQuiz)</span>
    @{
       using (Html.BeginForm("AnswerQuiz", "Course", FormMethod.Post))
       {
           <fieldset>
               <div class="quizContent">
